apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ kafdrop_application }}
spec:
  replicas: 1
  selector:
    matchLabels:
      app.kubernetes.io/name: {{ kafdrop_application }}
  template:
    metadata:
      labels:
        app.kubernetes.io/name: {{ kafdrop_application }}
    spec:
      serviceAccountName: {{ kafdrop_service_account }}
      serviceAccount: {{ kafdrop_service_account }}
      containers:
        - name: {{ kafdrop_application }}
          image: "{{ kafdrop_image }}"
          imagePullPolicy: Always
          env:
          - name: KAFKA_BROKERCONNECT
            value: {{ kafdrop_kafka_bootstrap_server_host }}
          - name: KAFKA_PROPERTIES
            value: ""
          - name: KAFKA_TRUSTSTORE
            value: ""
          - name: KAFKA_KEYSTORE
            value: ""
          - name: JVM_OPTS
            value: ""
          - name: JMX_PORT
            value: "8686"
          - name: HOST
            value: ""
          - name: SERVER_SERVLET_CONTEXTPATH
            value: "/"
          - name: KAFKA_PROPERTIES_FILE
            value: "{{ kafdrop_kafka_properties_file }}"
          - name: KAFKA_TRUSTSTORE_FILE
            value: ""
          - name: KAFKA_KEYSTORE_FILE
            value: ""
          - name: SERVER_PORT
            value: "{{ kafdrop_server_port }}"
          - name: CMD_ARGS
            value: ""
          ports:
            - name: http
              containerPort: {{ kafdrop_server_port }}
              protocol: TCP
          livenessProbe:
            httpGet:
              path: "/actuator/health"
              port: http
            initialDelaySeconds: 180
            periodSeconds: 30
            timeoutSeconds: 10
          readinessProbe:
            httpGet:
              path: "/actuator/health"
              port: http
            initialDelaySeconds: 20
            periodSeconds: 5
            timeoutSeconds: 10
          resources: {}
          volumeMounts:
            - mountPath: {{ kafdrop_kafka_properties_mount_path }}
              name: kafka-properties
      volumes:
        - name: kafka-properties
          secret:
            secretName: {{ kafdrop_secret }}
            defaultMode: 420
